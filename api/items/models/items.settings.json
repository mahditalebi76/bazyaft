{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "name": "Items"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Description": {
      "type": "richtext"
    },
    "Image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "Recyclable": {
      "type": "enumeration",
      "enum": [
        "Recyclable",
        "Not_Recyclable",
        "Limited"
      ]
    },
    "Dry": {
      "type": "boolean"
    },
    "UseCases": {
      "type": "text"
    },
    "CarbonFootprint": {
      "type": "float"
    },
    "WaterFootprint": {
      "type": "float"
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "glass",
        "metal",
        "paper",
        "plastic",
        "dangerous",
        "compost"
      ]
    }
  }
}
